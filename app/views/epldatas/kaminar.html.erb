<div class="container">
	<legend><p class="text-center"><h2>Premier League Results</h2></p></legend>
	<div class="table-responsive">
		<table class="table table-condensed">
		  <% @results.each do |a| %>
		  	<% if a.date != "" %>
			  	<thead>
			  		<tr>
			  			<td><b><%= a.date %></b></td>
			  		</tr>
			  	</thead>
			  <% end %>
			  <% if a.hometeam and a.awayteam != ""%>
			  	<tbody>
					  <tr style="background-color:#CED8F6; color:#0B0B3B;">
					  	<td class="text-center"><em><%= a.hometeam %></em></td>
					  	<td class="text-center"><b><%= a.score %></b></td>
					  	<td class="text-center"><em><%= a.awayteam %></em></td>
					  	<td class="text-center"><em><%= a.location %></em></td>
					  </tr>
					</tbody>
				<% end %>
		  <% end %>
		</table>
	</div>
</div>

<%= paginate @results %>

